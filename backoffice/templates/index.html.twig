{% extends "layout.html.twig" %}

{% block body %}

<!-- Page Content -->
    <div class="container">

      <!-- Jumbotron Header -->
      <header class="jumbotron my-4">
        <h1 class="display-3">Series</h1>
        <a href="{{ path_for('addSerie') }}"><button type="button" class="btn btn-success">Ajouter ville</button></a>
      </header>

      <!-- Page Features -->
      <div class="row text-center">

        {% for serie in data %}
	        <div class="col-lg-3 col-md-6 mb-4">
	          <div class="card">
	            <div class="card-body">
                <h4 class="card-title"><a class="nav-link" href="{{ path_for('serie', { 'id': serie.id }) }}">{{ serie.ville }}</a></h4>
                <hr>
	              <p class="card-text">Longitude : {{ serie.longitude }}</p>
	              <p class="card-text">Latitude : {{ serie.latitude }}</p>
                <a href="{{ path_for('deleteSerie', { 'id': serie.id }) }}"><button type="button" class="btn btn-danger">Supprimer</button></a>
	            </div>
	          </div>
	        </div>
        {% endfor %}



      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->

{% endblock %}